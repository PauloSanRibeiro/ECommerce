@model ECommerce.Models.City

@{
    ViewData["Title"] = "Detalhe da Cidade";
}

<h1>@ViewData["Title"]</h1>


<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Departments)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Departments.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.id" class="btn btn-info">Editar</a> |
    <a asp-action="Index" class="btn btn-primary">Voltar</a>
</div>
